<%= form_for [:admin, @user] do |f| %>

<% if @user.errors.any? %>
    <div>
      <%= pluralize(@user.errors.count, "error") %> prevented this user from being submitted:
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %>

  <div>
    <%= f.label "First Name" %><br>
    <%= f.text_field "firstname" %>
  </div>
  <div>
    <%= f.label "Lastname" %><br>
    <%= f.text_field "lastname" %>
  </div>
  <div>
    <%= f.label "Email" %><br>
    <%= f.text_field "email" %>
  </div>
  <div>
    <%= f.label "Admin status" %><br>
    <%= f.select(:admin_user, options_for_select([['Admin', true], ['User', @user.admin_user]],false),:prompt => "select type :") %>  
  </div>
    <div>
    <%= f.label "password" %><br>
    <%= f.password_field "password" %>
  </div>
    <div>
    <%= f.label "password_confirmation" %><br>
    <%= f.password_field "password_confirmation" %>
  </div>

  <div>
   <%= link_to "Cancel", :back %><%= f.submit "Submit" %> 
  </div>
<% end %>